<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.glm9637.myapplication"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".BbqApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/CutTheme">
        <activity
            android:name=".ui.activity.LandingActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.CategoryActivity"
            android:parentActivityName=".ui.activity.LandingActivity"/>
        <activity
            android:name=".ui.activity.CutActivity"
            android:parentActivityName=".ui.activity.CategoryActivity"/>
        <activity
            android:name=".ui.activity.RecipeActivity"
            android:parentActivityName=".ui.activity.CutActivity">
        </activity>
        <activity android:name=".ui.activity.NoteListActivity"
            android:parentActivityName=".ui.activity.RecipeActivity">
        </activity>
        <activity android:name=".ui.activity.NoteActivity"
            android:parentActivityName=".ui.activity.NoteListActivity">
        </activity>
        <activity android:name=".ui.activity.EditRecipeActivity"
            android:parentActivityName=".ui.activity.CutActivity">
        </activity>
        <activity android:name=".ui.activity.RecipeStepActivity"
            android:parentActivityName=".ui.activity.RecipeActivity">
        </activity>
    </application>

</manifest>