<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandingActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_default_margin">

        <android.support.constraint.Guideline
            android:id="@+id/gd_vert"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".5"/>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_beef"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="Category Beef Image"
                android:scaleType="centerInside"
                android:src="@drawable/ic_beef" />

            <TextView
                android:id="@+id/txt_beef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="16dp"
                android:fontFamily="@font/ff_copaseti"
                android:textSize="36sp"
                android:text="BEEF" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_pig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/cv_beef">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="Category Pig Image"
                android:scaleType="centerInside"
                android:src="@drawable/ic_pig" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="16dp"
                android:fontFamily="@font/ff_copaseti"
                android:textSize="36sp"
                android:text="Pig" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_poultry"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_constraintRight_toLeftOf="@id/gd_vert"
            app:layout_constraintTop_toBottomOf="@id/cv_pig">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:contentDescription="Category Poultry Image"
                android:scaleType="fitXY"
                android:layout_gravity="center|right"
                android:src="@drawable/ic_poultry" />

            <com.example.glm9637.myapplication.views.VerticalTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="bottom"
                android:fontFamily="@font/ff_copaseti"
                android:textSize="36sp"
                android:text="Poultry" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="16dp"
            app:layout_constraintLeft_toRightOf="@id/gd_vert"
            app:layout_constraintTop_toBottomOf="@id/cv_pig"
            app:layout_constraintTop_toTopOf="@id/cv_poultry"
            app:layout_constraintBottom_toBottomOf="@id/cv_poultry">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:contentDescription="Category Poultry Image"
                android:scaleType="fitXY"
                android:layout_gravity="center|right"
                android:src="@drawable/ic_fish"
                android:layout_marginEnd="8dp" />

            <com.example.glm9637.myapplication.views.VerticalTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="bottom"
                android:layout_gravity="center|left"
                android:fontFamily="@font/ff_copaseti"
                android:textSize="36sp"
                android:text="Fish" />

        </android.support.v7.widget.CardView>
    </android.support.constraint.ConstraintLayout>

</ScrollView>