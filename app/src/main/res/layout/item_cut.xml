<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selectable_item_background"

    android:clickable="true"
    android:focusable="true"
    android:paddingLeft="@dimen/margin_default"
    android:paddingRight="@dimen/margin_default"
    android:paddingTop="@dimen/margin_default">

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_light"
        android:textSize="@dimen/text_size_default"
        android:transitionName="cut text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="Name"/>

    <TextView
        android:id="@+id/txt_origin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:gravity="center"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintTop_toBottomOf="@id/txt_name"
        tools:text="Name"
        />

    <TextView
        android:id="@+id/txt_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:textColor="@color/text_light_light"
        app:layout_constraintTop_toBottomOf="@id/txt_origin"
        tools:text="Name"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_small"
        android:background="@color/background_divider"
        app:layout_constraintTop_toBottomOf="@id/txt_description"/>

    <TextView
        android:id="@+id/txt_recipe_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        app:layout_constraintBottom_toBottomOf="@id/txt_name"
        app:layout_constraintLeft_toRightOf="@+id/txt_name"
        tools:text="1"
        />

</android.support.constraint.ConstraintLayout>