<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:layout_margin="@dimen/margin_default">

    <TextView
        android:id="@+id/txt_step_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/text_size_caption"
        android:layout_alignParentStart="true"
        tools:text="1."/>

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/txt_step_number"
        android:layout_toStartOf="@id/txt_duration"
        tools:text="Ingredients"/>

    <TextView
        android:id="@+id/txt_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_access_time_black_24dp"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        tools:text="5min"/>


    <TextView
        android:id="@+id/txt_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_duration"
        android:layout_toEndOf="@id/txt_step_number"
        android:layout_alignParentEnd="true"
        tools:text="This is a ignored test description, why is the text aligned right? But only until a linebreak? Keep an eye one this"/>

</RelativeLayout>