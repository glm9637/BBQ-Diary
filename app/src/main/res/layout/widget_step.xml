<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/txt_step_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="36sp"
        android:layout_alignParentStart="true"
        tools:text="1."/>

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_step_number"
        tools:text="Ingredients"/>

    <TextView
        android:id="@+id/txt_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_access_time_black_24dp"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        tools:text="5min"/>


    <TextView
        android:id="@+id/txt_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_duration"
        android:layout_toRightOf="@id/txt_step_number"
        android:layout_alignParentEnd="true"
        tools:text="Test \n test is thisajkfsdnvklbqöiorebvjbvdqoöreibvödb  qreöiobvjfdbv   ouqbevfd\ntest"/>

</RelativeLayout>